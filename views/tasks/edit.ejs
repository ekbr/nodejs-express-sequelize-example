<!DOCTYPE html>
<html>
  <head>
	<% include ../layout/head.ejs %>
  </head>
  <body>
  	<% include ../layout/header.ejs %>
    <hr>
    <div class="container">
        <div class="row">
            <form method="post" action="/tasks/edit/<%=data.id%>">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="title" value="<%=data.title%>" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="description" required rows="3"><%=data.description %></textarea>
                </div>
                <div class="form-group">
                    <label>Deadline</label>
                    <input type="date" class="form-control" name="deadline" value="<%=data.deadline%>" required>
                </div>
                <div class="form-group">
                    <label>Task asssign to a farmer</label>
                    <select class="form-control" name="FarmerId">
                        <% for (var i = 0; i < farmers.length; i++) { %>
                            <option value="<%= farmers[i].id %>"> <%= farmers[i].username %> </option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <button type="submit" onclick="cancelAdd()" class="btn btn-default">Cancel</button>
            </form>
        </div>
    </div>
    <%- include ../layout/footer.ejs %>
  </body>
</html>
<%- include ../layout/head.ejs %>
<div class="page-data">
    <form method="post" action="/farmers/edit/<%=data.id%>">
        <table cellpadding="11">
        <tr>
            <td class="label">Name</td><td>: <input type="text" name="username" value="<%=data.name%>" required></td>
         </tr>
         <tr>
            <td class="label" valign="top">Address</td><td valign="top">: <textarea name="address" required cols="30" rows="5"><%=data.address%></textarea></td>
        </tr>
        <tr>
            <td class="label">Email</td><td>: <input type="text" name="email" value="<%=data.email%>" required></td>
         </tr>
          <tr>
            <td class="label">Phone</td><td>: <input type="text" name="phone" value="<%=data.phone%>" required></td>
         </tr>
         <tr>
            <td class="label"></td>
            <td>
                &nbsp; <input type="submit" name="submit" value="Save">
               <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
            </td>
         </tr>
        </table>
    </form>
</div>

<!DOCTYPE html>
<html>
  <head>
	<% include ../layout/head.ejs %>
  </head>
  <body>
  	<% include ../layout/header.ejs %>
        <hr>
         <div class="container">
             <h2>Edit Farmer</h2>
         </div>
         <br>
        <div class="container">
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
    
            <form method="post" action="/farmers/edit/<%=data.id%>">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="username" value="<%=data.username%>" required>
                </div>
                
                <div class="form-group">
                    <label for="exampleInputPassword1">Address</label>
                    <textarea class="form-control" name="address" required rows="3"><%=data.address%></textarea>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="email" name="email" value="<%=data.email%>" required>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <input type="text" class="form-control" name="phone" value="<%=data.phone%>" required>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <button type="submit" onclick="cancelAdd()" class="btn btn-default">Cancel</button>
            </form>
    </div>
    <%- include ../layout/footer.ejs %>
  </body>
</html>
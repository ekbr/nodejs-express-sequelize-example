<!DOCTYPE html>
<html>
  <head>
	<% include ../layout/head.ejs %>
  </head>
  <body>
  	<% include ../layout/header.ejs %>
    <hr>
    <div class="container">
        <h2>List Farmers</h2>
    </div>
    <br>
    <div class="container">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <button type="button" class="btn btn-success pull-right" onclick="addFarmer();">+ Add Farmer</button>
        <br><hr>
        <table class="table table-bordered">
            <tr>
                <th width="50px">No</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Action</th>
            </tr>            
            <% if(data.length){       
                for(var i = 0;i < data.length;i++) { %>
            <tr>
                <td><%=(i+1)%></td>
                <td><%=data[i].username%></td>
                <td><%=data[i].address%></td>
                <td><%=data[i].phone%></td>
                <td><%=data[i].email%></td>
                <td>
                    <a href="../farmers/<%=data[i].id%>">
                        <button type="button" class="btn btn-success">Show</button>
                    </a>
                    <a href="../farmers/edit/<%=data[i].id%>">
                        <button type="button" class="btn btn-info">Edit</button>
                    </a>
                    <a href="../farmers/delete/<%=data[i].id%>">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a>
                    
                    <a href="../farmers/<%=data[i].id%>/tasks">
                        <button type="button" class="btn btn-danger">Tasks</button>
                    </a>
                </td>
            </tr>
        <% }
            }else{ %>
                <tr>
                <td colspan="3">No farmer</td>
                </tr>
        <% } %>
        </table>
        <!--</div>-->
    </div>
    <%- include ../layout/footer.ejs %>
  </body>
</html>

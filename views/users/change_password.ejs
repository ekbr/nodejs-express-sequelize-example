<!DOCTYPE html>
<html>
  <head>
	<% include ../layout/head.ejs %>
  </head>
  <body>
  	<% include ../layout/header.ejs %>
      <hr>
      <div class="container" style="margin-top:70px;">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <form action="/change_password" method="post">
            <div class="form-group row">
                <label class="col-sm-2">Current Password</label>
                <div class="col-sm-10">
                    <input type="password" class="" name="currentPass" required/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">New Passsword</label>
                <div class="col-sm-10">
                    <input type="password" class="" name="newPass" required/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2">Retype New Passsword</label>
                <div class="col-sm-10">
                    <input type="password" class="" name="RetypeNewPass" required/>
                </div>
            </div>
            <div class="pull-left">
                <button type="submit" class="btn btn-success btn-md">Change</button>
            </div>
        </form>
    </div>
    <% include ../layout/footer.ejs %>
  </body>
</html>